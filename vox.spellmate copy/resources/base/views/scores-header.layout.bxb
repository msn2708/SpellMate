layout-macro-def (scores-header) {
  params{
    param (header) {
      max (One) min (Optional)
      type (core.Text)
    }
  }
    content {
    section {
      content {
        hbox {
          content {
            vbox {
              halign (Start)
              valign (Middle)
              content {
                single-line {
                  text {
                    value ("Question")
                    style (Title_M)
                  }
                }
              }
            }
            vbox {
              halign (Center)
              valign (Middle)
              content {
                single-line {
                  text {
                    value ("Answer")
                    style (Title_M)
                  }
                }
              }
            }
            vbox {
              halign (End)
              valign (Middle)
              content {
                single-line {
                  text {
                    value ("Result")
                    style (Title_M)
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}