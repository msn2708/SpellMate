result-view {
  match: Announcer(this) {
    from-output: TerminateGame (action)
  }

  render {
    layout {
      layout-macro (scores-layout) {
        param (scores) {
          expression (this.scoreBook.score)
        }
      }
      
      // layout-macro (scores-calculation) {
      //   param (scores) {
      //     expression (this.score)
      //   }
      // }
    }
    
  }
  
  followup {
    prompt {
      dialog ("This game is terminated. Would you like to start a new game?")
      on-confirm {
        intent {
          goal {BeginSpellMate}
          value: $expr(this)
        }
      }
      on-deny {
        intent {
          goal {TerminateGame}
          value: $expr(this)
        }
      }
    }
  }
}